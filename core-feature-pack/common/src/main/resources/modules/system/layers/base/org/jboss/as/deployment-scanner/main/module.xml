<module xmlns="urn:jboss:module:1.9" name="org.jboss.as.deployment-scanner">
    <properties>
        <property name="jboss.api" value="private"/>
    </properties>

    <exports>
        <exclude path="org/jboss/as/server/deployment/scanner/logging"/>
    </exports>

    <resources>
        <artifact name="${org.wildfly.core:wildfly-deployment-scanner}"/>
    </resources>

    <dependencies>
        <!-- for java.beans -->
        <module name="java.desktop"/>
        <module name="java.xml"/>
        <module name="org.jboss.logging"/>
        <module name="org.jboss.modules"/>
        <module name="org.jboss.msc"/>
        <module name="org.jboss.staxmapper"/>
        <module name="org.jboss.threads"/>
	<module name="org.jboss.as.controller"/>
	<module name="org.wildfly.common"/>
        <module name="org.wildfly.security.elytron-private" />
        <module name="org.jboss.as.server" />
        <!-- Allow javax->jakarta deployment transformation if this module is provided -->
        <module name="org.wildfly.deployment.transformation" optional="true" services="import"/>
    </dependencies>
</module>
