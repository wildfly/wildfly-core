<module xmlns="urn:jboss:module:1.9" name="org.jboss.as.remoting">
    <properties>
        <property name="jboss.api" value="private"/>
    </properties>

    <exports>
        <exclude path="org/jboss/as/remoting/logging"/>
    </exports>

    <resources>
        <artifact name="${org.wildfly.core:wildfly-remoting}"/>
    </resources>

    <dependencies>
        <module name="java.logging"/>
        <module name="java.security.sasl"/>
        <module name="java.xml"/>

        <module name="io.undertow.core" optional="true"/>
        <module name="org.jboss.as.controller"/>
        <module name="org.jboss.as.domain-management"/>
        <module name="org.jboss.as.network"/>
        <module name="org.jboss.as.protocol"/>
        <module name="org.jboss.as.server"/>
        <module name="org.jboss.logging"/>
        <module name="org.jboss.modules"/>
        <module name="org.jboss.msc"/>
        <module name="org.jboss.remoting"/>
        <module name="org.jboss.staxmapper"/>
        <module name="org.wildfly.common"/>
        <module name="org.wildfly.extension.io"/>
        <module name="org.wildfly.security.elytron-private"/>
        <module name="org.wildfly.service"/>
    </dependencies>
</module>
