<?xml version="1.0" encoding="UTF-8"?>

<!--
  Set these VM properties in your IDE debugger

  -Djava.util.logging.manager=org.jboss.logmanager.LogManager
  -Djboss.home=${workspace_loc:jboss-as-build}/target/jboss-as-9.0.0.Alpha2-SNAPSHOT
  -DallowConnectingToRunningServer=true
-->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.wildfly.core</groupId>
        <artifactId>wildfly-core-testsuite</artifactId>
        <version>4.0.0.Alpha3-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>wildfly-core-testsuite-rbac</artifactId>


    <!-- ********************************************************************************** -->
    <!-- ********************** Role Based Access Control Integration ********************* -->
    <!-- ********************************************************************************** -->
    <name>WildFly Core Test Suite: Role Based Access Control</name>

    <properties>
        <wildfly.home>${project.build.directory}/wildfly-core</wildfly.home>
        <wildfly.standalone.config>${project.build.directory}/wildfly-core/standalone/configuration</wildfly.standalone.config>
        <cli.scripts.dir>${basedir}/../src/test/scripts</cli.scripts.dir>
        <local.xslt.dir>${basedir}/src/test/resources/xslt</local.xslt.dir>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.apache.directory.server</groupId>
                <artifactId>apacheds-parent</artifactId>
                <version>${version.org.apache.ds}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>org.wildfly.core</groupId>
            <artifactId>wildfly-core-test-runner</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wildfly.core</groupId>
            <artifactId>wildfly-core-testsuite-shared</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wildfly.core</groupId>
            <artifactId>wildfly-vault-test-feature-pack</artifactId>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.apache.directory.api</groupId>
            <artifactId>api-ldap-codec-standalone</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.directory.jdbm</groupId>
            <artifactId>apacheds-jdbm1</artifactId>
            <type>bundle</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.directory.server</groupId>
            <artifactId>apacheds-core-annotations</artifactId>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.slf4j</groupId>
                    <artifactId>slf4j-log4j12</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.apache.directory.server</groupId>
            <artifactId>apacheds-interceptor-kerberos</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.directory.server</groupId>
            <artifactId>apacheds-server-annotations</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.wildfly.core</groupId>
            <artifactId>wildfly-jmx</artifactId>
        </dependency>
    </dependencies>
    <!--
        Server configuration executions.
    -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.wildfly.build</groupId>
                <artifactId>wildfly-server-provisioning-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>server-provisioning</id>
                        <goals>
                            <goal>build</goal>
                        </goals>
                        <phase>generate-test-resources</phase>
                        <configuration>
                            <config-file>server-provisioning.xml</config-file>
                            <server-name>wildfly-core</server-name>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>mgmt.config</id>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <phase>process-test-resources</phase>
                        <configuration>
                            <outputDirectory>${wildfly.standalone.config}</outputDirectory>
                            <overwrite>true</overwrite>
                            <resources>
                                <resource>
                                    <directory>src/test/resources</directory>
                                    <includes>
                                        <include>mgmt-groups.properties</include>
                                        <include>mgmt-users.properties</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.wildfly.plugins</groupId>
                <artifactId>wildfly-maven-plugin</artifactId>
                <version>${version.org.wildfly.plugin}</version>
                <executions>
                    <execution>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>execute-commands</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <offline>true</offline>
                    <scripts>
                        <script>${cli.scripts.dir}/enable-rbac.cli</script>
                    </scripts>
                    <jboss-home>${wildfly.home}</jboss-home>
                    <stdout>${project.build.directory}/wildfly-plugin.log</stdout>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>xml-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>adjust-default-server-configuration-for-basic-tests</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>transform</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <transformationSets>
                        <transformationSet>
                            <dir>${wildfly.standalone.config}</dir>
                            <skipDefaultExcludes>true</skipDefaultExcludes>
                            <includes>
                                <include>standalone*.xml</include>
                            </includes>
                            <stylesheet>${local.xslt.dir}/setupRbacRolesMappingTests.xsl</stylesheet>
                            <outputDir>${wildfly.standalone.config}</outputDir>
                            <fileMappers>
                                <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.RegExpFileMapper">
                                    <pattern>^</pattern>
                                    <replacement>properties-role-mapping-</replacement>
                                </fileMapper>
                            </fileMappers>
                        </transformationSet>
                        <transformationSet>
                            <dir>${wildfly.standalone.config}</dir>
                            <skipDefaultExcludes>true</skipDefaultExcludes>
                            <includes>
                                <include>properties-role-mapping-standalone*.xml</include>
                            </includes>
                            <stylesheet>${local.xslt.dir}/setupRbacLdapAuthG2U.xsl</stylesheet>
                            <outputDir>${wildfly.standalone.config}</outputDir>
                            <fileMappers>
                                <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.RegExpFileMapper">
                                    <pattern>^properties-role-mapping</pattern>
                                    <replacement>ldap-role-mapping-g2u</replacement>
                                </fileMapper>
                            </fileMappers>
                        </transformationSet>
                        <transformationSet>
                            <dir>${wildfly.standalone.config}</dir>
                            <skipDefaultExcludes>true</skipDefaultExcludes>
                            <includes>
                                <include>properties-role-mapping-standalone*.xml</include>
                            </includes>
                            <stylesheet>${local.xslt.dir}/setupRbacLdapAuthU2G.xsl</stylesheet>
                            <outputDir>${wildfly.standalone.config}</outputDir>
                            <fileMappers>
                                <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.RegExpFileMapper">
                                    <pattern>^properties-role-mapping</pattern>
                                    <replacement>ldap-role-mapping-u2g</replacement>
                                </fileMapper>
                            </fileMappers>
                        </transformationSet>
                        <transformationSet>
                            <dir>${wildfly.standalone.config}</dir>
                            <skipDefaultExcludes>true</skipDefaultExcludes>
                            <includes>
                                <include>standalone*.xml</include>
                            </includes>
                            <stylesheet>${local.xslt.dir}/enableJmxNonCoreMbeansSensitivity.xsl</stylesheet>
                            <outputDir>${wildfly.standalone.config}</outputDir>
                            <fileMappers>
                                <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.RegExpFileMapper">
                                    <pattern>^</pattern>
                                    <replacement>jmx-sensitivity-</replacement>
                                </fileMapper>
                            </fileMappers>
                        </transformationSet>
                    </transformationSets>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <failIfNoTests>true</failIfNoTests>
                    <parallel>none</parallel>
                    <redirectTestOutputToFile>${testLogToFile}</redirectTestOutputToFile>
                    <systemPropertyVariables>
                        <wildfly.debug>${ts.debug}</wildfly.debug>
                        <wildfly.debug.port>8787</wildfly.debug.port>
                        <server.config>standalone.xml</server.config>
                        <jvm.args>-Dmaven.repo.local=${settings.localRepository} ${surefire.system.args}</jvm.args>
                    </systemPropertyVariables>
                </configuration>
                <executions combine.children="append">
                    <!-- Disable default-test execution. -->
                    <execution>
                        <id>default-test</id>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>access-default</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>org/jboss/as/test/integration/mgmt/access/**/*TestCase*.java</include>
                            </includes>
                            <excludes>
                                <exclude>**/PropertiesRoleMappingTestCase.java</exclude>
                                <exclude>**/JmxSensitiveTestCase.java</exclude>
                                <exclude>**/LdapRoleMappingG2UTestCase.java</exclude>
                                <exclude>**/LdapRoleMappingU2GTestCase.java</exclude>
                            </excludes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>access-properties-role-mapping</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>org/jboss/as/test/integration/mgmt/access/PropertiesRoleMappingTestCase.java</include>
                            </includes>
                            <systemPropertyVariables>
                                <server.config>properties-role-mapping-standalone.xml</server.config>
                            </systemPropertyVariables>
                        </configuration>
                    </execution>
                    <execution>
                        <id>access-ldap-role-mapping-g2u</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>org/jboss/as/test/integration/mgmt/access/LdapRoleMappingG2UTestCase.java</include>
                            </includes>
                            <systemPropertyVariables>
                                <server.config>ldap-role-mapping-g2u-standalone.xml</server.config>
                            </systemPropertyVariables>
                        </configuration>
                    </execution>
                    <execution>
                        <id>access-ldap-role-mapping-u2g</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>org/jboss/as/test/integration/mgmt/access/LdapRoleMappingU2GTestCase.java</include>
                            </includes>
                            <systemPropertyVariables>
                                <server.config>ldap-role-mapping-u2g-standalone.xml</server.config>
                            </systemPropertyVariables>
                        </configuration>
                    </execution>
                    <execution>
                        <id>access-integration-jmx-sensitivity</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>org/jboss/as/test/integration/mgmt/access/JmxSensitiveTestCase.java</include>
                            </includes>
                            <systemPropertyVariables>
                                <server.config>jmx-sensitivity-standalone.xml</server.config>
                            </systemPropertyVariables>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

    <profiles>
        <profile>
            <id>debugTestRunner</id>
            <activation>
                <property>
                    <name>server.debug</name>
                </property>
            </activation>
            <properties>
                <ts.debug>true</ts.debug>
            </properties>
        </profile>
    </profiles>
</project>
