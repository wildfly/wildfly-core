<module xmlns="urn:jboss:module:1.5" name="org.picketbox">
    <!-- 
       CAUTION. THIS IS NOT A PROPER SPECIFICATION OF THE org.pickbox:main MODULE!
       IT ONLY CONTAINS THE MINIMAL RESOURCES AND DEPENDENCIES NEEDED TO SUPPORT
       LIMITED TESTING OF WILDFLY CORE'S USAGE OF THE PICKETBOX SECURITY VAULT
       AND IS NOT MEANT FOR ANY OTHER PURPOSE
    -->
    
    <properties>
      <property name="jboss.api" value="private"/>
    </properties>

    <resources>
        <artifact name="${org.picketbox:picketbox}"/>
    </resources>

    <dependencies>
        <module name="javax.api"/>
        <module name="javax.security.auth.message.api"/>
        <module name="javax.xml.bind.api"  optional="true"/>
        <module name="javax.xml.stream.api"  optional="true"/>
        <module name="org.jboss.logging"/>
        <module name="sun.jdk"/>
    </dependencies>
</module>
