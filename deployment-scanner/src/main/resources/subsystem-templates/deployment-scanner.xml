<?xml version='1.0' encoding='UTF-8'?>
<!--  See src/resources/configuration/ReadMe.txt for how the configuration assembly works -->
<config>
   <extension-module>org.jboss.as.deployment-scanner</extension-module>
   <subsystem xmlns="urn:jboss:domain:deployment-scanner:2.0">
       <deployment-scanner path="deployments" relative-to="jboss.server.base.dir" scan-interval="5000" runtime-failure-causes-rollback="${jboss.deployment.scanner.rollback.on.failure:false}"/>
       <?KEYCLOAK-AUTH-SCANNER?>
   </subsystem>

   <!-- Used if you want to boot the Keycloak auth server at startup -->
   <supplement name="keycloak">
       <replacement placeholder="KEYCLOAK-AUTH-SCANNER">
           <deployment-scanner name="keycloak" path="keycloak/auth-deployment" relative-to="jboss.server.base.dir" scan-interval="-1" runtime-failure-causes-rollback="${jboss.deployment.scanner.rollback.on.failure:false}"/>
       </replacement>
   </supplement>
</config>